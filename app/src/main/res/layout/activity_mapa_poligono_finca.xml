<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapaPoligonoFincaActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapaPoligonoFincaActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:paddingRight="100dp">

        <Button
            android:id="@+id/buttonEliminarUltimoPunto"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/headerColor"
            android:text="Eliminar Ãºltimo punto"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonEscogerUbicacion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/headerColor"
            android:drawablePadding="@dimen/nav_header_vertical_spacing"
            android:text="@string/marcar_punto"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonFinalizarMarcado"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/headerColor"
            android:text="@string/finalizar_marcado"
            android:textAllCaps="false" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewMarcadorArbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/marker32mod" />

    <Button
        android:id="@+id/buttonGhostFinca"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_gravity="center|right"
        android:background="@android:color/transparent"
        android:text="."
        android:textColor="@android:color/transparent" />

</FrameLayout>