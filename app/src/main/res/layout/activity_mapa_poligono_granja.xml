<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapaPoligonoGranjaActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapaPoligonoGranjaActivity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:paddingRight="100dp">

        <Button
            android:id="@+id/buttonEliminarUltimoPunto"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/headerColor"
            android:text="Eliminar último punto"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonEscogerUbicacion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/headerColor"
            android:drawablePadding="@dimen/nav_header_vertical_spacing"
            android:text="@string/marcar_punto"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonFinalizarMarcado"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/headerColor"
            android:text="@string/finalizar_marcado"
            android:textAllCaps="false" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewMarcadorArbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/marker32mod" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:text="Cada vez que oprima el botón marcar punto, quedará marcado el punto en el mapa. Mueva el mapa y vuelva a oprimir el botón marcar punto. Repita este paso tantas veces hasta que se forme un poligono delimitando la granja, debe marcar al menos 3 puntos para establecer de manera correcta la ubicación. Para eliminar un punto haga clic en eliminar último punto"
        android:textColor="@color/fontColor2"
        android:textSize="14sp" />

</FrameLayout>